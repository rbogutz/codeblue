<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Weather</th>
      <th>Numpeople</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.location_id %></td>
        <td><%= report.weather_id %></td>
        <td><%= report.numPeople %></td>
        <td><%= report.comments %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

