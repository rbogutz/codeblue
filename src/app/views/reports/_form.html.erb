<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% report.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <ol>
    <li>
      <div class="field">
        <p>Where did you observe the homeless individual(s)? <br/>
           Enter the street address of cross street. <br/>
        <%= form.text_field :location_string, required: true %></p>
      </div>
    </li>
 
 <!-- Weather will be calculated
  <div class="field"> 
    <%= form.label :weather_id %>
    <%= form.text_field :weather_id %>
  </div> 
  -->
    <li>
      <div class="field">
        <p>How many homeless individuals did you observe? </br>
          If you are unsure, enter 1. </br>
        <%= form.number_field :numPeople, min: 1, max: 20, required: true %></p>
      </div>
    </li>
    
    <li>
      <div class="field">
        <p>Do you have any other comments? <br/>
        <%= form.text_field :comments %></p>
      </div>
    </li>
  </ol>

  <div class="actions">
    <%= form.submit "Submit" %>
  </div>
<% end %>
